<%- include('../partials/navbar.ejs') %>
<main>
    <div class="container mt-5">
        <%- include ('../partials/messages') %>
        <!-- Profile -->
        <div class="row align-items-center py-4">
            <div class="col-12 col-sm-6">
                <h3 class="font-weight-regular">Profile</h3>
                <p></p>
                <p>Your email is your identity on Timexio <br> and is used to log you in.</p>
            </div>
            <div class="col-12 col-sm-6">
                <form action="/account/credentials/profile" method="POST">
                    <div class="form-group mb-4">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="name" id="name" value="<%= user.name %>">
                    </div>
                    <div class="form-group mt-4 mb-4">
                        <label for="email">Email</label>
                        <input class="form-control" type="email" name="email" value="<%= user.email %>">
                    </div>
                    <div class="form-group mt-4 mb-4">
                        
                    </div>
                    <button type="submit" class="btn_1">Save Changes</button>
                </form>
            </div>
        </div>
        <hr>

        <!-- Change Password -->
        <div class="row align-items-center py-4">
            <div class="col-12 col-sm-6">
                <h3 class="font-weight-regular">Change Password</h3>
                <p></p>
                <p>Try to choose a strong password for your account.
                <br><strong>Note: </strong>Your new password must be different from your old password!</p>
            </div>
            <div class="col-12 col-sm-6">
                <form action="/account/credentials/changepassword" method="POST">
                    <div class="form-group mb-4">
                        <label for="name">Current Password</label>
                        <input class="form-control" type="password" name="currentPassword" id="currentPassword">
                    </div>
                    <div class="form-group mt-4 mb-4">
                        <label for="email">New Password</label>
                        <input class="form-control" type="password" name="newPassword" id="newPassword">
                    </div>
                    <div class="form-group mt-4 mb-4">
                        <label for="email">Confirm Password</label>
                        <input class="form-control" type="password" name="confirmPassword" id="confirmPassword">
                    </div>
                    <button type="submit" class="btn_1">Update Password</button>
                </form>
            </div>
        </div>
    </div>
</main>
