<%- include('../partials/nabvar.ejs') %>
<main>
    <!--================Cart Area =================-->
    <section class="cart_area section_padding">
      <div class="container">
        <% if (cartItems.length > 0) { %>
          <div class="hero-cap text-center mt-2 mb-5">
            <h1>Your Cart</h1>
          </div>
          <div class="cart_inner">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Remove</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <% cartItems.forEach(product => { %>
                      <td>
                        <div class="media">
                          <div class="d-flex">
                            <img class="border-0" src="<%= product.image %>" alt="product image" />
                          </div>
                          <div class="media-body">
                            <p><%= product.name %></p>
                          </div>
                        </div>
                      </td>
                    <td>
                      <h4 class="input-price">&#8377;<%= product.price %></h4>
                    </td>
                    <td>
                      <div class="product_count">
                        <span class="input-number-decrement"> <i class="ti-minus"></i></span>
                        <input class="input-number input-quantity" type="text" value="<%= product.quantity %>" min="0" max="10">
                        <span class="input-number-increment"> <i class="ti-plus"></i></span>
                      </div>
                    </td>
                    <td class="text-center"><span data-feather="x-circle"></span></td>
                  </tr>
                  <% }) %>
                  <tr>
                    <td></td>
                    <td>
                      <h4>$2160.00</h4>
                    </td>
                    <td>
                      <h4>Subtotal</h4>
                    </td>
                  </tr>
                </tbody>
              </table>
              <div class="checkout_btn_inner float-right">
                <a class="btn_1" href="/">Continue Shopping</a>
                <a class="btn_1 checkout_btn_1" href="/account/checkout">Proceed to checkout</a>
              </div>
            </div>
          </div>
        <% } else { %>
          <h3 class="display-4 text-center m-5">Your cart is empty!</h3>
        <% } %>
      </div>
    </section>
    <!--================End Cart Area =================-->
</main>
<%- include('../partials/footer.ejs') %> <%- include('../partials/search-box.ejs')
%>