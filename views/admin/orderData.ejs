<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
	<!-- Main Content -->
	<div id="content">
		<%- include ('../partials/admin/navbar.ejs') %>

		<!-- Begin Page Content -->
		<div class="container-fluid">
			<!-- Page Heading -->
			<div
				class="d-sm-flex align-items-center justify-content-between mb-4"
			>
				<h1 class="h3 mb-0 text-gray-800">
					<%= currentModel %>
				</h1>
				<div class="text-right">
					<a
						href="#"
						class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm"
						><i class="fas fa-download fa-sm text-white-50"></i>
						Generate Report</a
					>
				</div>
			</div>

		<%- include ('../partials/messages.ejs') %>


			<!-- DataTales Example -->
			<div class="card shadow mb-4">
				<div class="card-header py-3">
					<h6 class="m-0 font-weight-bold text-primary">
						List of all products under category "<%= currentModel %>"
					</h6>
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table
							class="table table-bordered"
							id="dataTable"
							width="100%"
							cellspacing="0"
						>
							<thead>
								<tr>
                                    <th>Order Id</th>
									<% fields.forEach(fieldName => { %>
										<th class="text-dark"><%= fieldName %></th>
									<% }) %>
									<th>Options</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
                                    <th>Order Id</th>
									<% fields.forEach(fieldName => { %>
										<th class="text-dark"><%= fieldName %></th>
									<% }) %>
									<th>Options</th>
								</tr>
							</tfoot>
							<tbody>
								<% data.forEach(item => { %>
								<tr>
									<% fields.forEach(fieldName => { %>
										<td>
											<% if (item[fieldName]) { %>
												<%= item[fieldName] %> 
											<% } else { %>
												<%= item[fieldName] %>
											<% } %>
										</td>
										<% }) %>
										<td class="text-center">
											<a class="btn btn-outline-primary rounded-pill border-0" href="product/<%= item.id %>/details"  data-toggle="tooltip" data-placement="left" title="Detailed view">
												<i class="fas fa-table"></i>
											</a>
											<button class="deleteBtn btn btn-outline-danger rounded-pill border-0" data-id="<%= item.id %>" data-toggle="tooltip" data-placement="left" title="Delete"><i class="fas fa-trash"></i></button>
										</td>
									</tr>
								<% }) %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->


	</div>
	<!-- End of Main Content -->

	<!-- Footer -->
	<footer class="sticky-footer bg-white">
		<div class="container my-auto">
			<div class="copyright text-center my-auto">
				<span>Copyright &copy; Timexio 2020</span>
			</div>
		</div>
	</footer>
	<!-- End of Footer -->
</div>
<!-- End of Content Wrapper -->

<!-- Page level plugins -->
<script src="vendor/datatables/jquery.dataTables.min.js"></script>
<script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="js/demo/datatables-demo.js"></script>
<script src="js/tooltip.js"></script>
<!-- Delete particular Data -->
<script>
	$(document).ready(function () { 
		$('.deleteBtn').click(function(e) {
			var id = $(this).attr('data-id')

			swal({
				title: "Are you sure?",
				text: "Once deleted, you will not be able to recover this data!",
				icon: "warning",
				buttons: true,
				dangerMode: true
			})
			.then((willDelete) => {
				if (willDelete) {
					$.ajax({
						type: 'DELETE',
						url: `/admin/product/${id}/delete`,
						success: function (data) { 
							location.reload();
						},
						error: function (error) { 
							swal(error);
						}
					})
				}
			})
			.catch(err => console.log(err))


		})
	})
</script>