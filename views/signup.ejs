<%- include('partials/nabvar.ejs') %>
<main>
	<!--================login_part Area =================-->
	<section class="login_part section_padding ">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-sm-12 col-lg-6 col-md-6 mx-auto">
					<div class="login_part_form">
						<div class="login_part_form_iner">
							<%- include ('./partials/messages') %>

							<h3>
								Create new Account
							</h3>
							<form
								class="row contact_form"
								action="/users/signup"
								method="post"
								novalidate="novalidate"
							>
								<div class="col-md-12 form-group p_star">
									<input
										type="name"
										id="name"
										name="name"
										class="form-control"
										placeholder="Full Name"
										value="<%= typeof name != 'undefined' ? name : '' %>"
									/>
								</div>
								<div class="col-md-12 form-group p_star">
									<input
										type="email"
										id="email"
										name="email"
										class="form-control"
										placeholder="Email"
										value="<%= typeof email != 'undefined' ? email : '' %>"
									/>
								</div>
								<div class="col-md-12 form-group p_star">
									<input
										type="password"
										id="password"
										name="password"
										class="form-control"
										placeholder="Create Password"
										value="<%= typeof password != 'undefined' ? password : '' %>"
									/>
								</div>
								<div class="col-md-12 form-group p_star">
									<input
										type="password"
										id="password2"
										name="password2"
										class="form-control"
										placeholder="Confirm Password"
										value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
									/>
								</div>
								<div class="col-md-12 form-group mt-4">
                                    <p>Already have an account? <a class="text-primary" href="/users/login">Login Here</a></p>
									<button type="submit" value="submit" class="btn_3">
										Sign Up <i data-feather="send"></i>
									</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--================login_part end =================-->
</main>
<%- include('./partials/footer.ejs') %> 
<%- include('./partials/search-box.ejs')%>

